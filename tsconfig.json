{
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "lib": [
            "ES5",
            "ES6",
            "ES2018",
            "ES2019",
            "ES2020",
            "esnext"
        ],
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "experimentalDecorators": true
    }
}